<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HiTechCase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RobotoRegularTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">35sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>


    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">@color/light_black</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorOnSurface">@color/dark_gray</item>
        <item name="colorError">@color/error_light</item>
        <item name="errorTextColor">@color/error_light</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="hintEnabled">true</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/gray_opacity_42</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="colorControlActivated">@color/green</item>
    </style>


    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>

    </style>


    <style name="TextAppearance.App.EditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>

    </style>

    <style name="BaseButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:backgroundTint">@color/purple</item>
        <item name="android:textColor">@color/ecru</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">99dp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="percentWidth">0.69</item>
        <item name="percentHeight">0.5</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_height">0dp</item>
        <item name="rippleColor">@color/ecru</item>
        <item name="android:letterSpacing">0.026</item>
    </style>



</resources>